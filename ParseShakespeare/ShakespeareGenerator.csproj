<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/NamalD/RandomShakespeare</PackageProjectUrl>
    <RepositoryUrl>https://github.com/NamalD/RandomShakespeare</RepositoryUrl>
    <Authors>Namal Dayarathna</Authors>
    <Company />
    <Description>Generate random Shakespeare works from an existing corpus</Description>
    <Copyright>Copyright 2019</Copyright>
    <PackageTags>Shakespeare Markov Chain Generative Poetry</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="0.12.1" />
    <PackageReference Include="Markov" Version="2.0.0" />
  </ItemGroup>

</Project>
